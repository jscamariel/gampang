<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0DD116"
    android:orientation="vertical"
    tools:context=".Bayar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BAYAR:"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/totalbayar"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textColor="#192A9C"
        android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seratus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100" />

        <TextView
            android:id="@+id/jml6"
            android:layout_width="35dp"
            android:textColor="#FFFFFF"
            android:layout_height="30dp"
            android:textSize="15dp" />

        <Button
            android:id="@+id/limaribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5.000" />

        <TextView
            android:id="@+id/jml1"
            android:layout_width="35dp"
            android:textColor="#FFFFFF"
            android:layout_height="30dp"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/duaratus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200" />

    <TextView
        android:id="@+id/jml2"
        android:layout_width="35dp"
        android:textColor="#FFFFFF"
        android:layout_height="30dp"
        android:textSize="15dp" />

        <Button
            android:id="@+id/sepuluhribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.000" />

        <TextView
            android:id="@+id/jml7"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/limaratus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500" />

    <TextView
        android:id="@+id/jml3"
        android:layout_width="35dp"
        android:textColor="#FFFFFF"
        android:layout_height="30dp"
        android:textSize="15dp" />

        <Button
            android:id="@+id/duapuluhribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20.000" />

        <TextView
            android:id="@+id/jml8"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.000" />

    <TextView
        android:id="@+id/jml4"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

        <Button
            android:id="@+id/limapuluhribu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000" />

        <TextView
            android:id="@+id/jml9"
            android:layout_width="35dp"
            android:layout_height="30dp"
            android:textColor="#FFFFFF"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <Button
        android:id="@+id/duaribu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.000" />

    <TextView
        android:id="@+id/jml5"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />

    <Button
        android:id="@+id/seratusribu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100.000" />

    <TextView
        android:id="@+id/jml10"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:textColor="#FFFFFF"
        android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_kembalian"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:background="#033F0D"
            android:text="Kembalian :"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/kembalian"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:textColor="#325BEB"
            android:textSize="40dp" />
    </LinearLayout>
</LinearLayout>