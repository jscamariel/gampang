<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0DD116"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp">

        <Button
            android:id="@+id/edit_nama"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:background="#108610"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_harga"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/edit_nama"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />


        <Button
            android:id="@+id/btn_minus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_nama"
            android:background="#18A018"
            android:text="-"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_nama"
            android:layout_toRightOf="@id/btn_minus"
            android:background="#18A018"
            android:text="+"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/edit_jumlah"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/edit_nama"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/btn_plus"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

</RelativeLayout>